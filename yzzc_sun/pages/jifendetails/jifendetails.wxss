page {
    background-color: #fff;
}

.statusBox {
    width: 100%;
    height: 90rpx;
    display: -webkit-box;
    flex-direction: row;
    justify-content: space-around;
    -webkit-box-align: center;
    font-size: 30rpx;
    border-top: 1rpx solid #eee;
    background-color: #fff;
}

.status-item {
    height: 50rpx;
    border-left: 1rpx solid #000;
    -webkit-box-flex: 1;
    text-align: center;
}

.status-item.active {
    color: #ffb62b;
}

.status-item:first-child {
    border: none;
}

.jifen-item {
    width: 100%;
    height: 110rpx;
    border-bottom: 1rpx solid #eee;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.name {
    margin: 10rpx 30rpx;
    font-size: 26rpx;
    color: #000;
}

.time {
    font-size: 24rpx;
    color: #999;
    margin: 0rpx 30rpx 10rpx 30rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.zhichu {
    color: #ffb62b;
    font-size: 30rpx;
}

.zhichu.active {
    color: #000;
}