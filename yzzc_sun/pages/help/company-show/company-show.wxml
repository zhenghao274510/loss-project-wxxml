<view class="container">
    <map id="map" latitude="{{msg.lat}}" longitude="{{msg.lng}}" markers="{{markers}}" scale="14" style="width: 100%; height: 150px;"></map>
    <view class="bottomWord">
        <view class="companyTitle">{{msg.name}}</view>
        <text class="Contents">{{msg.content}}</text>
        <view class="connectUs">联系我们</view>
        <view class="Contents">
            <view>联系电话：{{msg.tel}}</view>
            <view>公司地址：{{msg.address}}</view>
        </view>
    </view>
    <view bindtap="callMe" class="callMe">联系我们</view>
</view>
