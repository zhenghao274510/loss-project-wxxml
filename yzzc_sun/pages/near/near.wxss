.container {
    width: 100%;
    font-size: 30rpx;
    color: #000;
    background-color: #fff;
}

.shop-dingwei {
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    padding: 0 30rpx;
    box-sizing: border-box;
    border-top: 1rpx solid #eee;
    border-bottom: 1rpx solid #eee;
    display: flex;
    justify-content: space-between;
}

.pickers {
    width: 750rpx;
}

.city-wrap {
    display: flex;
    align-items: center;
}

.arrow {
    width: 11rpx;
    height: 20rpx;
    margin-left: 20rpx;
}

.shopList {
    position: fixed;
    top: 100rpx;
    left: 0;
    right: 0;
    bottom: 98rpx;
    width: 100%;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
    flex: 1 1 auto;
    background: #fff;
}

.leftScroll {
    width: 40%;
    background-color: #efefef;
}

.areaItem {
    padding: 35rpx 20rpx 35rpx 30rpx;
    border-bottom: 1rpx solid #eee;
    box-sizing: border-box;
    background-color: #efefef;
}

.areaItem.active {
    background-color: #fff;
}

.rightScroll {
}

.shopItem {
    padding: 40rpx 30rpx;
    display: flex;
    flex-direction: column;
    border-bottom: 1rpx solid #eee;
}

.shopName {
    font-size: 28rpx;
    color: #000;
    display: flex;
    justify-content: space-between;
}

.address {
    color: #999;
    font-size: 26rpx;
    margin-top: 5rpx;
}

.wallView {
    width: 100%;
    height: 20rpx;
    display: flex;
    flex: 0 0 auto;
}