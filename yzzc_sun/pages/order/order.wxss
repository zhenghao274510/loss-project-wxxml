.container {
    padding-bottom: 98rpx;
}

.statusBox {
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    display: -webkit-box;
    flex-direction: row;
    justify-content: space-around;
    font-size: 30rpx;
    border-top: 1rpx solid #eee;
    background-color: #fff;
}

.status-item {
    -webkit-box-flex: 1;
    text-align: center;
}

.status-item.active {
    border-bottom: 4rpx solid #ffb62b;
}

.about-mes {
    width: 100%;
    background-color: #fff;
    margin-top: 20rpx;
    border-top: 1rpx solid #eee;
}

.title {
    display: flex;
    justify-content: space-between;
}

.number {
    font-size: 26rpx;
    color: #999;
    margin: 25rpx 30rpx;
}

.status {
    font-size: 30rpx;
    color: #ffb62b;
    margin: 20rpx 30rpx 20rpx 0rpx;
}

.status.hadPay {
    color: #000;
}

.car-guige {
    display: flex;
    box-sizing: border-box;
    border-top: 1rpx solid #eee;
    border-bottom: 1rpx solid #eee;
}

.carImg {
    width: 200rpx;
    height: 140rpx;
    display: flex;
    margin: 30rpx;
}

.guige-text {
    margin: 65rpx 30rpx 65rpx 0rpx;
}

.carName {
    font-size: 30rpx;
    color: #000;
}

.carMes {
    color: #999;
    font-size: 26rpx;
    margin-top: 10rpx;
}

.box {
    display: flex;
    flex-direction: column;
    padding: 30rpx;
    border-bottom: 1rpx solid #eee;
}

.take-send {
}

.take-send:nth-child(2) {
    margin-top: 30rpx;
}

.oneRow {
    display: flex;
    align-items: center;
}

.weizhi {
    font-size: 26rpx;
    color: #999;
    margin-left: 30rpx;
}

.storeName {
    color: #000;
    font-size: 30rpx;
    margin-top: 5rpx;
}

.icons {
    width: 30rpx;
    height: 30rpx;
}

.date-box {
    display: flex;
    justify-content: space-between;
    padding-left: 60rpx;
    padding-right: 60rpx;
    border-bottom: 1rpx solid #eee;
    margin-bottom: 30rpx;
}

.dates {
    color: #000;
    font-size: 30rpx;
}

.times {
    color: #999;
    font-size: 26rpx;
    margin-top: 15rpx;
}

.startDate {
    margin: 25rpx 30rpx 30rpx 0rpx;
}

.durations {
    width: 90rpx;
    height: 90rpx;
    border-radius: 100%;
    margin: 20rpx 0rpx;
    border: 1rpx solid #999;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.total {
    color: #ffb62b;
    font-size: 30rpx;
}

.danwei {
    color: #000;
    font-size: 26rpx;
}

.endDate {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    margin: 25rpx 0rpx 30rpx 30rpx;
}

.payNow-btn {
    margin: 0rpx auto 20rpx;
    width: 92%;
    height: 90rpx;
    border-radius: 10rpx;
    background-color: #ffb62b;
    color: #fff;
    font-size: 34rpx;
}

button::after {
    border: none;
}

.tishi {
    color: #ffb62b;
    font-size: 30rpx;
    text-align: center;
    margin-bottom: 25rpx;
}