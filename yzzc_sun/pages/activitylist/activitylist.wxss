.act-item {
    background-color: #fff;
    margin: 30rpx 30rpx 0rpx 30rpx;
    border-radius: 10rpx;
    position: relative;
}

.act-img {
    display: flex;
    width: 100%;
    border-top-left-radius: 10rpx;
    border-top-right-radius: 10rpx;
}

.wrap {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin: 10rpx 20rpx 6rpx 20rpx;
}

.title {
    font-size: 30rpx;
    color: #000;
}

.dateWord {
    font-size: 26rpx;
    color: #999;
}

.detailsWord {
    font-size: 26rpx;
    color: #999;
    padding: 0rpx 20rpx 10rpx 20rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}