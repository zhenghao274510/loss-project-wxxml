<view bindtap="goActDetails" class="act-item" data-aid="{{item.aid}}" wx:for="{{list.data}}" wx:key="{{index}}">
    <view>
        <image class="act-img" mode="widthFix" src="{{imgLink+item.pic}}"></image>
    </view>
    <view class="wrap">
        <view class="title">{{item.title}}</view>
        <view class="dateWord">{{item.createtime}}</view>
    </view>
    <view class="detailsWord">{{item.details}}</view>
</view>
<sec-login bind:watch="onloadData" isLogin="{{true}}"></sec-login>
