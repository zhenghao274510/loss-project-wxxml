.ad,.mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}

.mask {
    background: rgba(0,0,0,.4);
}

.box {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    width: 530rpx;
    height: 640rpx;
    background: #fff;
    border-radius: 10rpx;
}

.box-in {
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
    overflow: hidden;
}

.img-box,.item image {
    width: 530rpx;
    height: 640rpx;
}

.icon {
    position: absolute;
    top: -60rpx;
    right: 0;
    color: #fff;
}