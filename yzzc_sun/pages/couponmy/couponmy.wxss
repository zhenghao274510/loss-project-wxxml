@import "../couponlist/couponlist.wxss";

.statusBox {
    width: 100%;
    height: 90rpx;
    display: -webkit-box;
    flex-direction: row;
    justify-content: space-around;
    -webkit-box-align: center;
    font-size: 30rpx;
    border-top: 1rpx solid #eee;
    background-color: #fff;
}

.status-item {
    height: 50rpx;
    border-left: 1rpx solid #000;
    -webkit-box-flex: 1;
    text-align: center;
}

.status-item.active {
    color: #ffb62b;
}

.status-item:first-child {
    border: none;
}

.top.active {
    background-color: #d4d4d4;
}

.shixiaoBox {
    width: 110rpx;
    height: 110rpx;
    border-radius: 100%;
    font-size: 38rpx;
    border: 1rpx solid #fff;
    text-align: center;
    line-height: 110rpx;
    margin-top: 20rpx;
}